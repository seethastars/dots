#!/bin/bash

SELECTION="$(printf " - Lock\n󰤄 - Suspend\n󰿅 - Log out\n - Reboot\n󱄌 - Reboot to UEFI\n󰤂 - Shutdown" | fuzzel --dmenu -l 6 -p "Power Menu: ")"

case $SELECTION in
	*"Lock")
		hyprlock;;
	*"Suspend")
		systemctl suspend;;
	*"Log out")
		niri exit;;
	*"Reboot")
		systemctl reboot;;
	*"Reboot to UEFI")
		systemctl reboot --firmware-setup;;
	*"Shutdown")
		systemctl poweroff;;
esac
